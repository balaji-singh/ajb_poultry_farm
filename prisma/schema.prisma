generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String
  password  String
  userType  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Batch {
  id        String     @id @default(cuid())
  name      String
  startDate DateTime
  isActive  Boolean    @default(true)
  expenses  Expense[]
  incomes   Income[]
  mortality Mortality[]
}

model Expense {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  expenseType String
  amount      Float
  batch       Batch    @relation(fields: [batchId], references: [id])
  batchId     String
}

model Income {
  id         String   @id @default(cuid())
  date       DateTime @default(now())
  incomeType String
  amount     Float
  batch      Batch    @relation(fields: [batchId], references: [id])
  batchId    String
}

model Mortality {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  count     Int
  batch     Batch    @relation(fields: [batchId], references: [id])
  batchId   String
}